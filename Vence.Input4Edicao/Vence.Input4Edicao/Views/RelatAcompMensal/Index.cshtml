@model Vence.Input4Edicao.Models.RelatAcompMensalVM

@{     
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    @Scripts.Render("~/Scripts/relatAcompMensal.js")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
}

<style>
    .imgHidde {
        visibility: hidden;
    }

    .imgVisible {
        visibility: visible;
    }
</style>
<link href="~/Content/relatAcompMensal.css" rel="stylesheet" />
<form id="frmPesquisa">
    <div id="content">
        <h1>Base de dados H&P até 31/07/2015</h1>
        <h3>Acompanhamento Mensal de Frequência</h3>
        <div class="jumbotron">
            <div>
                <p style="height:80px">
                    <span style="float:left; width:200px">
                        <label>Numero AES:</label>
                        @Html.TextBoxFor(model => model.NumeroAES, new { @class = "form-control", @style = "width:180px" })
                    </span>
                    <span style="float:left; width:120px">
                        <label>Item AES:</label>
                        @Html.DropDownListFor(model => model.ItemAES, new SelectList(Model.ItemAES), "Selecione...", new { @class = "form-control", @style = "width:120px" })
                    </span>
                    <span style="float:left; padding-left:10px; padding-top:3px; width:40px; padding-top:33px">
                        <img id="ajaxLoading" src="~/Content/ajax-loader.gif" class="imgHidde" />
                    </span>
                    <span style="float:left; width:80px; padding-top:33px">
                        <input type="button" id="btnPesquisa" class="btn" value="Pesquisar" />
                    </span>
                </p>
            </div>            
        </div>
        <div id="gvAcompMensal"></div>
    </div>
</form>

