@model Vence.Input4Edicao.Models.RelatParcelaFinalVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    @Scripts.Render("~/Scripts/relatParFinal.js")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
}
<style>
    .imgHidde {
        visibility: hidden;
    }

    .imgVisible {
        visibility: visible;
    }
</style>
<link href="~/Content/relatorios.css" rel="stylesheet" />
<form id="frmPesquisa">
    <div id="content">
        <h1> Base de dados H&P até 31/07/2015</h1>
        <h3>Relatório Parcela Final</h3>
        <div class="jumbotron">
            <div style="height:50px">
                <div style="float:left; width:230px">
                    <div style="float:left; width:80px;">
                        <label>Chave:</label>
                    </div>
                    <div style="float:left; width:150px; padding-top:5px">
                        @Html.TextBoxFor(model => model.Chave, new { @class = "form-control", @style = "width:130px" })
                    </div>
                </div>
                <div style="float:left; width:500px">
                    <label>Somente Parcelas do Plano de Contingência?</label>
                    @Html.CheckBoxFor(model => model.SomenteParcelasPlanoContigencia)
                </div>
                <div style="float:left; width:30px; padding-right:10px">
                    <img id="ajaxLoading" src="~/Content/ajax-loader.gif" class="imgHidde" />
                </div>
                <div style="float:left; width:70px; padding-left:5px;">
                    <input type="button" id="btnPesquisa" class="btn" value="Pesquisar" />
                </div>
            </div>
        </div>
        <div id="gridView"></div>
    </div>
</form>